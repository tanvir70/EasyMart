<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:\WEBDEVELOPMENT\IntelliJ IDEA 2023.2.2\IdeaProjects\application.txt</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>
                D:\WEBDEVELOPMENT\IntelliJ IDEA 2023.2.2\IdeaProjects\application.log%i.zip
            </fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>20</maxIndex>
        </rollingPolicy>

        <tiggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1KB</maxFileSize>
        </tiggeringPolicy>
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS}
                %magenta([%thread])
                %highlight(%-5level)
                %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss:SSS}
                %magenta([%thread])
                %highlight(%-5level)
                %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
        <root level="debug">
            <appender-ref ref="FILE"/>
            <appender-ref ref="STDOUT"/>
        </root>
    </appender>
</configuration>